
@{
    ViewBag.Title = "UrunGetir";
}

<h2>UrunGetir</h2>

Ürün ID:
<input type="text" id="urunId" />
<br />
<input type="button" id="urunGetir" value="Ürün Getir" />
<br />

<div id="urun"></div>

<script>
    $(document).ready(function () {

        $('#urunGetir').click(function () {

            var urunId = $('#urunId').val();

            $.getJSON('../api/urun/' + urunId).done(function (urun) {


                var urunBilgisi = urun.Ad + "Fiyatı:" + urun.Fiyat + "Tl - Stok Miktarı" + urun.StokMiktari + "<br/>";
                $('#urun').html(urunBilgisi);
            }).error(function (xhr, options, error) {
                if (error == "Not Found") {
                    alert("Ürün Bulunamadı");
                }
                if (error == "Unauthorized")
                    alert("Bu işlem için yetkiniz yoktur.")
            });

        });
    });












</script>