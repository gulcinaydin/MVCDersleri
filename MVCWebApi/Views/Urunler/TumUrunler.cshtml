
@{
    ViewBag.Title = "TumUrunler";
}

<h2>TumUrunler</h2>

<input type="button" id="urunleriListele" value="Urunleri Getir" />

<div id="urunler"></div>

<script>
    $(document).ready(function () {

        $('#urunleriListele').click(function () {

            $.getJSON('../api/urun').done(function (veri) {

                var urunler = "";

                $.each(veri, function (key, urun) {

                    urunler += urun.Ad + "Fiyatı:" + urun.Fiyat + "Tl - Stok Miktarı" + urun.StokMiktari + "<br/>";

                });

                $('#urunler').html(urunler);

            });
        });
    });

</script>