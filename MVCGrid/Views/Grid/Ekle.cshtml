@model MVCGrid.Models.Personel
@{
    ViewBag.Title = "Ekle";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}

<h2>Ekle</h2>
@using (Html.BeginForm())
{

    <div class="input-group mb-3">
        <span class="input-group-text" id="txt_ad"><i class="glyphicon glyphicon-user"></i></span>
        @Html.TextBoxFor(m => m.Ad, new { @class = "form-control", placeholder = "Adınızı Giriniz", aria_describedby = "txt_ad" })

    </div>
    <br />
    <div class="input-group mb-3">
        <span class="input-group-text" id="txt_soyad"><i class="glyphicon glyphicon-user"></i></span>
        @Html.TextBoxFor(m => m.Soyad, new { @class = "form-control", placeholder = "Soyadını Giriniz", aria_describedby = "txt_soyad" })

    </div>
    <br />
    <div class="input-group mb-3">
        <span class="input-group-text" id="txt_yas"><i class="glyphicon glyphicon-time"></i></span>
        @Html.TextBoxFor(m => m.Yas, new { @class = "form-control", placeholder = "Yaşınızı Giriniz", aria_describedby = "txt_yas" })

    </div>
    <div class="input-group mb-3">
        <span class="input-group-text" id="txt_ulke"><i class="glyphicon glyphicon-globe"></i></span>
        @Html.DropDownListFor(m => m.Ulke.Id, (List<SelectListItem>)ViewBag.Ulkeler, new { @class = "form-control", aria_describedby = "txt_ulke" })

    </div>
    <br />
    <input type="submit" class="btn btn-success" value="Kaydet" />
}